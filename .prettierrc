{
	"tabWidth": 4,
	"useTabs": true,
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"semi": true,
				"printWidth": 100,
				"singleQuote": false
			}
		},
		{
			"files": "*.ts",
			"options": {
				"printWidth": 120,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "all",
				"bracketSpacing": true,
				"arrowParens": "avoid",
				"quoteProps": "consistent",
				"proseWrap": "never",
				"endOfLine": "lf"
			}
		}
	]
}